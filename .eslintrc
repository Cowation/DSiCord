{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
	"ignorePatterns": "/public/scripts/*.js",
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}